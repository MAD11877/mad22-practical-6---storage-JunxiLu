<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessageGroup">

    <Button
        android:id="@+id/Group1Btn"
        android:layout_width="268dp"
        android:layout_height="54dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="22dp"
        android:text="Group 1"
        app:layout_constraintBottom_toTopOf="@+id/Group2Btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Group2Btn"
        android:layout_width="268dp"
        android:layout_height="54dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="8dp"
        android:text="Group 2"
        app:layout_constraintBottom_toTopOf="@+id/Frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Group1Btn" />

    <FrameLayout
        android:id="@+id/Frame"
        android:layout_width="409dp"
        android:layout_height="446dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Group2Btn">

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>